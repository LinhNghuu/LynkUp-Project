<!DOCTYPE html>
<html lang="en" data-theme="valentine">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <title>Home</title>
  </head>
  <body>
    <header>
      <!-- Include the navbar -->
      <%- include('partials/navbar', {page: '/'}) %>
    </header>
    <main>
      <!-- Main Content -->
      <div class="container mx-auto mt-5 flex">
        <!-- Sidebar -->
        <div class="w-1/4 rounded p-6">
          <div class="mb-4 flex flex-col items-center">
            <img
              src="img/shin.jpeg"
              alt="Profile"
              class="w-16 h-16 rounded-full mb-2"
            />
            <h2 class="text-lg font-semibold">KOKOJIDAU</h2>
          </div>
          <div>
            <a
              href="/"
              class="flex items-center space-x-2 py-1 hover:bg-gray-200 rounded"
            >
              <i class="fas fa-home text-gray-600"></i>
              <span class="text-gray-700">Home</span>
            </a>
            <a
              href="#"
              class="flex items-center space-x-2 py-1 hover:bg-gray-200 rounded"
            >
              <i class="fas fa-user-friends text-gray-600"></i>
              <span class="text-gray-700">Friends</span>
            </a>
            <a
              href="#"
              class="flex items-center space-x-2 py-1 hover:bg-gray-200 rounded"
            >
              <i class="fas fa-bell text-gray-600"></i>
              <span class="text-gray-700">Notifications</span>
            </a>
            <a
              href="#"
              class="flex items-center space-x-2 py-1 hover:bg-gray-200 rounded"
            >
              <i class="fas fa-envelope text-gray-600"></i>
              <span class="text-gray-700">Messages</span>
            </a>
            <a
              href="#"
              class="flex items-center space-x-2 py-1 hover:bg-gray-200 rounded"
            >
              <i class="fas fa-bookmark text-gray-600"></i>
              <span class="text-gray-700">Bookmarks</span>
            </a>
            <a
              href="#"
              class="flex items-center space-x-2 py-1 hover:bg-gray-200 rounded"
            >
              <i class="fas fa-list-alt text-gray-600"></i>
              <span class="text-gray-700">Lists</span>
            </a>
            <a
              href="#"
              class="flex items-center space-x-2 py-1 hover:bg-gray-200 rounded"
            >
              <i class="fas fa-ellipsis-h text-gray-600"></i>
              <span class="text-gray-700">More</span>
            </a>
          </div>
        </div>
     <!-- Feed -->
     <div class="w-1/2 mx-3 bg-gray-100">
      <!-- Post Box -->
      <div class="bg-white p-4 rounded-lg mb-4 shadow-2xl animate__animated animate__fadeInUp text-black border-b-8 border-pink-400 transform hover:scale-105 transition duration-500 ease-in-out">
        <h4 class="text-3xl font-extrabold text-pink-700 leading-snug hover:text-pink-800 transition duration-300">
          Let's Keep the Conversation Going!!
        </h4>
        <h1 class="text-3xl font-black mt-2 mb-4 text-pink-700 leading-none hover:text-pink-800 transition duration-300">
          Stop using <span class="text-red-500 hover:text-red-600 transition duration-300">Only</span> <i class="fa-solid fa-fan text-red-500 hover:text-red-600 transition duration-300"></i>'s
        </h1>
        <div class="flex space-x-4 mt-4">
          <button class="bg-pink-700 text-white rounded-full py-2 px-6 hover:bg-pink-800 transition duration-300">
            Do Something
          </button>
          <button class="bg-red-500 text-white rounded-full py-2 px-6 hover:bg-red-600 transition duration-300">
            Cancel
          </button>
        </div>
      </div>
      
      
    
    <!-- Posts -->
    <ul class="space-y-4">
      <% person.forEach(function(person) { %>
        <li class="post bg-white p-4 rounded shadow-md flex items-start space-x-4 transition-all hover:shadow-lg animate__animated animate__fadeInUp text-black border-b-2 border-red-200">
          <a href="/person/<%= person.slug %>">
          <img class="post__avatar w-16 h-16 rounded-full object-cover transition-all hover:scale-105" src="<%= person.img %>" alt="User Image"/>
        </a>
        <div class="post__body flex flex-col flex-grow">
          <div class="post__header">
            <div class="post__headerText">
              <h3 class="text-md font-medium inline text-gray-800">
                <a href="/person/<%= person.slug %>"><%= person.name %></a>
              </h3>
            </div>
            <div class="post__headerDescription mt-1">
              <p class="text-sm text-gray-700 italic">
                <%= person.status %>
              </p>
            </div>
          </div>
          <div class="post__image">
            <img class="mt-2 rounded object-cover w-full h-68" src="<%= person.img %>" alt="Post Image"/>  <!-- Removed the hover:scale-105 -->
          </div>
          <div class="post__footer mt-2 flex justify-between">
            <i class="fas fa-retweet text-gray-600 hover:text-blue-400"></i>
            <i class="fas fa-heart text-gray-600 hover:text-red-400"></i>
            <i class="fas fa-share text-gray-600 hover:text-green-400"></i>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>


        <!-- Right Sidebar -->
        <div class="w-1/4 rounded p-3">
          <div class="widgets__widgetContainer p-4 rounded shadow">
            <h2 class="text-lg font-semibold mb-4">What's happening?</h2>
            <div class="post__avatar">
              <img
                class="w-10 h-10 rounded-full object-cover"
                src="img/Barbie-Niki.jpeg"
                alt=""
              />
            </div>
            <div class="post flex items-start space-x-4">
              <div class="post__body flex flex-col">
                <div class="post__header">
                  <div class="post__headerText">
                    <h3 class="text-md font-medium inline">
                      NickiKAKA
                      <span class="post__headerSpecial text-blue-600 ml-2">
                        <i class="fas fa-check-circle"></i> @NickiKAKA
                      </span>
                    </h3>
                  </div>
                  <div class="post__headerDescription mt-1">
                    <p class="text-sm text-gray-700">
                      Are you a magician? Because whenever I look at you,
                      everyone else disappears.
                    </p>
                  </div>
                </div>
                <img class="mt-2 rounded" src="img/Barbie-Niki.jpeg" alt="" />
                <div class="post__footer mt-2 flex justify-between">
                  <i class="fas fa-retweet text-gray-600"></i>
                  <i class="fas fa-heart text-gray-600"></i>
                  <i class="fas fa-share text-gray-600"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <!-- Include the footer -->
      <%- include('partials/footer') %>
    </footer>
  </body>
</html>
